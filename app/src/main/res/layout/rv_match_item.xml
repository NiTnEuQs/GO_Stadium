<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/go_text_result"
    android:paddingBottom="@dimen/go_text_result"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_result_home_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin"
        app:layout_constraintRight_toLeftOf="@id/tv_result"
        android:gravity="end"
        tools:text="Amiens SC"
        android:onClick="onClickHomeTeam"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        tools:text="  -  " />

    <TextView
        android:id="@+id/tv_result_away_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin"
        app:layout_constraintLeft_toRightOf="@id/tv_result"
        android:gravity="center_vertical"
        tools:text="St Quentin"
        android:onClick="onClickAwayTeam"
        android:clickable="true"
        android:focusable="true" />

</android.support.constraint.ConstraintLayout>